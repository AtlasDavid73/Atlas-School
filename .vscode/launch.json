{
  "version": "0.2.0",
  "configurations": [    
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current File (TypeScript)",
      "program": "${file}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current File (JavaScript)",
      "program": "${file}",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
